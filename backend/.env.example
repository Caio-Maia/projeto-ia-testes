# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# AI Model Credentials
CHATGPT_API_KEY=your-chatgpt-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Authentication Configuration
# IMPORTANTE: Altere esses valores em produção!
AUTH_USERNAME=frontend
AUTH_PASSWORD=frontend-password-change-me
AUTH_TOKEN=seu-token-secreto-muito-longo-e-seguro-aqui
JWT_SECRET=sua-chave-jwt-secreta-muito-segura-aqui

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
GLOBAL_RATE_LIMIT=100
API_RATE_LIMIT=10

# Compression
COMPRESSION_LEVEL=6

# JIRA Integration (Optional)
JIRA_HOST=your-jira-instance.atlassian.net
JIRA_USER=your-jira-email@example.com
JIRA_API_TOKEN=your-jira-api-token

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Database (Optional)
DATABASE_URL=sqlite:./data/database.db

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# Security
HTTPS_REDIRECT=false
HELMET_ENABLED=true
CSRF_PROTECTION=true

# Redis & Queue Configuration (Optional)
# Used for async job processing (coverage analysis, batch operations)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
AI_QUEUE_CONCURRENCY=2
